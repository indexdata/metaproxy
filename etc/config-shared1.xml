<?xml version="1.0"?>
<metaproxy xmlns="http://indexdata.com/metaproxy" version="1.0">
  <start route="start"/>
  <filters>
    <filter id="frontend" type="frontend_net">
      <port>@:9000</port>
      <connect-max ip="::1" verbose="2">20</connect-max>
      <connect-total verbose="1">200</connect-total>
      <http-req-max ip="::1" verbose="2">2</http-req-max>
      <message>FN</message>
    </filter>
    <filter id="backend" type="z3950_client">
    </filter>
  </filters>
  <routes>
    <route id="start">
      <filter refid="frontend"/>
      <filter type="log">
        <message>F</message>
        <category apdu="false" init-options="true"/>
      </filter>
      <filter type="limit">
        <limit bandwidth="50000" pdu="100" retrieve="50" search="5"/>
      </filter>
      <filter type="session_shared">
        <resultset max="3" optimizesearch="false" restart="true" ttl="10"/>
        <session ttl="30"/>
        <init maximum-record-size="320000" preferred-message-size="310000"/>
      </filter>
      <filter type="log">
        <message>B</message>
        <category apdu="false" init-options="true"/>
      </filter>
      <filter refid="backend"/>
      <filter type="bounce"/>
    </route>
  </routes>
</metaproxy>
